{
  "extends": "airbnb",
  "env": {
    es6: true,
    node: true,
    jest: true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "operator-linebreak": ["error", "after"],

    "import/extensions": "off"
  }
}
